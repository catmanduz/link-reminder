{
    "manifest_version": 3,
    "name": "Link Reminder",
    "description": "Save links with categories, keywords, and reminder times. Search by category, keyword, domain, or URL.",
    "version": "1.1.0",
    "action": { "default_title": "Link Reminder", "default_popup": "popup.html" },
    "background": { "service_worker": "background.js", "type": "module" },
    "icons": { "128": "icons/icon-128.png" },
    "permissions": ["storage", "tabs", "contextMenus", "alarms", "notifications"],
    "commands": {
        "save_current_tab": {
            "suggested_key": { "default": "Ctrl+Shift+S", "mac": "Command+Shift+S" },
            "description": "Open the save window for the current tab"
        },
        "open_library": {
            "suggested_key": { "default": "Ctrl+Shift+L", "mac": "Command+Shift+L" },
            "description": "Open the Link Reminder Library"
        }
    }
}
